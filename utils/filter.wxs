

function datetimeFormat(date, format) { 
    if (typeof date == "string") {
        date = date.replace(getRegExp("-", "g"), "\/").replace("T", " ");
        var mts = date.match(getRegExp("\/Date\((\d+)\)\/"));
        if (mts && mts.length >= 2) {
            date = parseInt(mts[1]);
        }
        date = getDate(date);
    }
    if (!date || date.toUTCString() == "Invalid Date") {
        return "";
    }
    var map = {
        "M": date.getMonth() + 1, //月份
        "d": date.getDate(), //日
        "h": date.getHours(), //小时
        "m": date.getMinutes(), //分
        "s": date.getSeconds(), //秒
        "q": Math.floor((date.getMonth() + 3) / 3), //季度
        "S": date.getMilliseconds() //毫秒
    };
    format = format.replace(getRegExp("([yMdhmsqS])+", "g"), function (all, t) {
        var v = map[t];
        if (v !== undefined) {
            if (all.length > 1) {
                v = '0' + v;
                v = v.substring(v.length - 2);
            }
            return v;
        } else if (t === 'y') {
            return (date.getFullYear() + '').substring(4 - all.length);
        }
        return all;
    });
    return format;
}

module.exports = {
    datetimeFormat: datetimeFormat
}